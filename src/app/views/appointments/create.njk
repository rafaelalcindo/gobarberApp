{% extends "_layouts/default.njk/" %}

{% block body %}
  <div class="content" >
    <strong>Agendando Hor√°rio</strong>

    <div class="provider" >
      <div>
        <img src="/files/{{ provider.avatar }}" />
        <strong>{{ provider.name }}</strong>
      </div>
    </div>

    <form action="/app/appointments/new/{{ provider.id }}" method="post" >
        <input type="text" class="flatpicker" placeholder="Escolha uma data" />

        <div id="hours" >
          {# <label>
            <input type="radio" />
            12:00
          </label>
          <label>
            <input type="radio" />
            13:00
          </label>
          <label>
            <input type="radio" />
            14:00
          </label> #}
        </div>

        <button type="submit" >Agendar</button>
    </form>
  </div>

  <script type="text/javascript" >
    flatpickr('.flatpicker', {
      minDate: new Date(),
      dateFormat: 'd/m/Y',
      onChange: function(date) {

        fetch(`/app/available/{{ provider.id }}?date=${ date[0].getTime() }`)
          .then(function (response) {

            response.text().then(function(html) {

              document.getElementById('hours').innerHTML = html
            })
          })
      }
    })
  </script>
{% endblock %}
